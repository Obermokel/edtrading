<?xml version="1.0" encoding="UTF-8" ?>

<Configuration>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d] %-5p [%F:%L] :: %m%n" />
        </Console>
        <File name="LOGFILE" fileName="${sys:user.home}/edtrading.log">
            <PatternLayout pattern="[%d] %-5p [%F:%L] :: %m%n" />
        </File>
    </Appenders>

    <Loggers>
        <logger name="borg" level="DEBUG"></logger>
        <logger name="borg.edtrading.BodyInfoTest" level="TRACE"></logger>
        <logger name="borg.edtrading.boofcv.TemplateMatcher" level="INFO"></logger>
        <!-- logger name="borg.edtrading.data.ScannedBodyInfo" level="TRACE"></logger -->
        <!-- logger name="borg.edtrading.eddb.BodyUpdater" level="TRACE"></logger -->
        <!-- logger name="borg.edtrading.ocr.ScannedBodyInfoParser" level="TRACE"></logger -->

        <Root level="ERROR">
            <AppenderRef ref="STDOUT" />
            <AppenderRef ref="LOGFILE" />
        </Root>
    </Loggers>

</Configuration>
